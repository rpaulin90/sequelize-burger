
<h1>Eat-Da-Burger</h1>
<div class="container">
    <div class="row">
        <div class="col-xs-4">
            <ul>
                {{#each burgers}}
                    {{#unless this.devoured}}
                        <li class="notDevouredSideList">
                            {{this.burger_name}}

                            <form action="/{{this.id}}?_method=PUT" method="POST" class="notDevouredSide">
                                <input type="text" name="name">
                                <button type="submit">Devour!</button>
                            </form>
                        </li>
                    {{/unless}}
                {{/each}}
            </ul>
        </div>
        <div class="col-xs-4">
            <img src="/assets/images/burger.png" alt="a burger"/>
        </div>
        <div class="col-xs-4">
            <ul>
                {{#each burgers}}
                    {{#if this.devoured}}
                        <li class="devouredSide">
                            {{this.id}} <p class="id-burger-separator">. </p> {{this.burger_name}} <p class="id-burger-separator">(Eaten by </p> {{this.customer_name}}<p class="id-burger-separator">)</p>
                        </li>
                    {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>

        <h2 class="burger-title">Add a burger</h2>
    <form class="create-update-form burger-input" action="/" method="POST">

        <div class="form-group">
            <label for="ca">Burger Name:</label>
            <input type="text" id="ca" name="name">
        </div>

        <button type="submit">Add Burger</button>
    </form>

    <div class="instructions">Enter the name of a burger you would like to eat, then click on "Add Burger"</div>

</div>